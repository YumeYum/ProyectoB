                <div class="form-group col-sm-4">
                    @Html.LabelFor(model => model.rut, htmlAttributes: new { @class = "control-label col-sm-6" })
                    <div class="col">
                        @Html.EditorFor(model => model.rut, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.rut, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    @Html.LabelFor(model => model.razon_social, htmlAttributes: new { @class = "control-label col-sm-6" })


