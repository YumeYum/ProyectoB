@model WebApplication9.Models.contacto_empresa
<style>
    .ui-dialog-title {
        font-size: 120%;
    }

    .control-label {
        font-weight: bold;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="row">
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.id_empresa, "Empresa", htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col">
                    @Html.DropDownList("id_empresa", Model.empresaListSI, htmlAttributes: new { @class = "form-control", required = "required", style = "width: 250px;" })
                    @Html.ValidationMessageFor(model => model.id_empresa, "", new { @class = "text-danger" })
                </div>
        </div>
            </div>

        <div class="row">
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.id_contacto, "Contacto", htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col">
                    @Html.DropDownList("id_contacto", Model.contactosListSI, htmlAttributes: new { @class = "form-control", required = "required", style = "width: 250px;" })
                    @Html.ValidationMessageFor(model => model.id_contacto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.fecha_inicio_rel, htmlAttributes: new { @class = "control-label col-sm-6 text-nowrap" })
                    <div class="col">
                        @Html.TextBoxFor(model => model.fecha_inicio_rel, new { @class = "Datepicker", @Value = Model.fecha_inicio_rel.ToString("dd-MM-yyyy"), required = "required" })
                        @Html.ValidationMessageFor(model => model.fecha_inicio_rel, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.fecha_termino_rel, htmlAttributes: new { @class = "control-label col-sm-6 text-nowrap" })
                    <div class="col">
                        @Html.TextBoxFor(model => model.fecha_termino_rel, new { @class = "Datepicker", @Value = Model.fecha_inicio_rel.ToString("dd-MM-yyyy"), required = "required" })
                        @Html.ValidationMessageFor(model => model.fecha_termino_rel, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        <div class="row">
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.cargo, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col">
                    @Html.EditorFor(model => model.cargo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.cargo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.telefono_fijo, htmlAttributes: new { @class = "control-label col-sm-6" })
                <div class="col">
                    @Html.EditorFor(model => model.telefono_fijo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.telefono_fijo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.telefono_celular, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col">
                    @Html.EditorFor(model => model.telefono_celular, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.telefono_celular, "", new { @class = "text-danger" })
                </div>
            </div>
            </div>

            <div class="col-sm-6">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>

        
}
<script type="text/javascript">
        $(document).ready(function () {
            $('.Datepicker').datepicker({
                dateFormat: "dd-mm-yy",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            });
    });
    $("#my-dialog2").dialog('option', 'title', 'Editar Contacto-Empresa');
    $("#my-dialogContactoEmpresa").dialog('option', 'title', 'Editar Contacto-Empresa');
</script>

<div class="col">
    @Html.ActionLink("Volver al índice", "Index_Contacto_Empresa")
</div>
